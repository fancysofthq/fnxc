primitive Pointer(Pointee T)
  @[Native]
  unsafe def initialize(address : Size)
  end

  @[Native]
  threadsafe const def address : Size
  end

  @[Native]
  unsafe const def [count : Size] : T
  end

  @[Native]
  unsafe def [count : Size] = (value : T) : T
  end

  const def value : T
    @self[0]
  end

  def value = (new : T) : T
    @self[0] = new
  end
end
